{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "outDir": "build/dist",
    "sourceMap": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["dom", "es2015", "es2016"],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "importHelpers": true,
    "strict": true,
    "noImplicitReturns": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "jest"
  ]
}